<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jaran.jaranstictactoe.no.example.jaran.jaranstictactoe.GameActivity">


    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/playerOne"
            android:text="Player One: 0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/playerTwo"
            android:text="Player Two: 0"/>

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">

        <Button
            android:id="@+id/gameButton_00"
            android:tag="gameButton_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="75sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/gameButton_01"
            android:tag="gameButton_01"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:textSize="75sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/gameButton_02"
            android:tag="gameButton_02"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:textSize="75sp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">

        <Button
            android:id="@+id/gameButton_10"
            android:tag="gameButton_10"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:textSize="75sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/gameButton_11"
            android:tag="gameButton_11"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:textSize="75sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/gameButton_12"
            android:tag="gameButton_12"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:textSize="75sp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">

        <Button
            android:id="@+id/gameButton_20"
            android:tag="gameButton_20"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:textSize="75sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/gameButton_21"
            android:tag="gameButton_21"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:textSize="75sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/gameButton_22"
            android:tag="gameButton_22"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:textSize="75sp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
